record(longin, "$(P){$(PSC)}SS:Currbufaddr-I") {
    field(DESC, "Current DDR Address of Snapshot Pointer")
    field(DTYP, "PSC Reg")
    field(INP , "@Wfm$(PSC) 52 0")
    field(SCAN,"I/O Intr")
}

record(longin, "$(P){$(PSC)}SS:TotalTrigs-I") {
    field(DESC, "Total Number of 10Khz DMA writes")
    field(DTYP, "PSC Reg")
    field(INP , "@Wfm$(PSC) 52 4")
    field(SCAN,"I/O Intr")
}

record(longin, "$(P){$(PSC)}SS:Latsoftbufaddr-I") {
    field(DESC, "Latched DDR Address on last soft trigger")
    field(DTYP, "PSC Reg")
    field(INP , "@Wfm$(PSC) 52 8")
    field(SCAN,"I/O Intr")
}
